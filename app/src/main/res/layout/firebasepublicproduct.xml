<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    >

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/background_edittxt_dialog"

        >

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/pp"
            android:scaleType="centerCrop"
            android:padding="3dp"

            android:id="@+id/img_mainpic"/>
        <TextView
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textAlignment="center"
            android:id="@+id/main_name"
            android:text="Personal protective mask"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="4dp"
            android:gravity="right"
            android:weightSum="3">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.2"
                android:layout_height="25dp"
                android:text="200tk"
                android:id="@+id/main_price"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="#E64A19"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_marginLeft="10dp"
                android:layout_height="25dp"
                android:text="Details"
                android:textAllCaps="false"
                android:background="#F6EA407E"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:id="@+id/main_btnprice"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>