<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:layout_goneMarginTop="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="3dp"
        app:cardCornerRadius="5dp"
        android:elevation="5dp"
        app:cardElevation="3dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:weightSum="4">


               <de.hdodenhof.circleimageview.CircleImageView
                   android:layout_width="85dp"
                   android:layout_height="85dp"
                   app:civ_border_overlay="true"
                   app:civ_border_color="#ffcc"
                   app:civ_border_width="2dp"
                   android:layout_marginTop="10dp"
                   android:layout_marginLeft="20dp"
                   android:src="@drawable/pp"/>


               <TextView
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="3"
                   android:layout_gravity="center"
                   android:layout_marginLeft="30dp"
                   android:text="Demo name "
                   android:textSize="19sp"
                   android:textStyle="bold"
                   android:id="@+id/username"/>

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:weightSum="5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Items"
                    android:textStyle="bold"
                    android:paddingLeft="3dp"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:id="@+id/item_slsit"
                    android:text="Surgical mask "
                    android:textSize="17sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textAlignment="center"
                android:id="@+id/suppliother"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:weightSum="5">


                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1.5"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textStyle="bold"
                    android:paddingLeft="3dp"
                    android:textSize="18sp"/>


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5"
                    android:id="@+id/item_slocation"
                    android:text="Surgical mask "
                    android:textSize="17sp"/>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="25dp"
                android:gravity="right"
                android:layout_marginRight="10dp"
                android:weightSum="5">


                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="30dp"
                    android:text="Deny"
                    android:background="@drawable/denybutton_bg"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:layout_marginRight="3dp"
                    android:id="@+id/deny_sitem"/>


                <Button
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="30dp"
                android:text="Details"
                android:background="@drawable/details_bg"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                    android:layout_marginRight="3dp"
                android:id="@+id/details_sitem"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_weight="1.3"
                    android:layout_height="30dp"
                    android:text="Accept"
                    android:background="@drawable/accept"
                    android:textColor="@android:color/white"
                    android:textAllCaps="false"
                    android:id="@+id/accept_sitem"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>