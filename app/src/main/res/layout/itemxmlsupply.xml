<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:elevation="10dp"
            app:cardElevation="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="15dp"
                android:visibility="visible"
                android:id="@+id/llayoutsolid"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Supply::"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="your item here"
                        android:textSize="15sp"

                        android:id="@+id/tv_need_supply"
                        android:textColor="#546BE8"

                        />
                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.3"
                        android:layout_height="wrap_content"
                        android:text="Supply Other:"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"

                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1.7"
                        android:layout_height="wrap_content"
                        android:text="your item here"
                        android:textSize="15sp"

                        android:id="@+id/tv_need_supply_other"
                        android:textColor="#546BE8"

                        />
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="20dp"
                    android:weightSum="3">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Deadline:"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:text="your item here"
                        android:textSize="15sp"
                        android:id="@+id/tv_Location"
                        android:textColor="#546BE8"

                        />
                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="4"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="30dp"
                    >


                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:background="@drawable/btn_background"
                        android:textColor="@android:color/white"
                        android:id="@+id/btn_delete"
                        android:layout_marginRight="10dp"

                        />
                    <Button
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="35dp"
                        android:text="Edit"
                        android:textAllCaps="false"
                        android:textStyle="bold"
                        android:background="@drawable/btn_bg_submit"
                        android:textColor="@android:color/white"
                        android:id="@+id/btn_edit"

                        />

                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="invisible"
                android:id="@+id/udateLayout"
                >

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:hint="Enter text here "
                    android:textColor="@android:color/black"
                    android:textColorHint="@android:color/black"
                    android:textSize="18sp"
                    android:textAlignment="center"
                    android:id="@+id/edt_update"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_submit"
                    android:id="@+id/btn_update"
                    android:layout_marginLeft="120dp"
                    android:textColor="@android:color/white"

                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>

</RelativeLayout>