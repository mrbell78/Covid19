    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ftoolbar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atleast add one product pic max 5"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="10dp"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:layout_height="100dp"
                   android:src="@drawable/defaultimage"
                    android:scaleType="fitCenter"
                    android:id="@+id/img_productpic"
                    android:visibility="visible"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear all"
                    android:textSize="18sp"
                    android:gravity="right"
                    android:padding="3dp"
                    android:id="@+id/removepic"
                    android:visibility="invisible"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:id="@+id/grupimage"
                    android:weightSum="5">



                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:id="@+id/img1"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="3dp"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:id="@+id/img2"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="3dp"

                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:id="@+id/img3"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="3dp"
                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:id="@+id/img4"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="3dp"

                        />
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:id="@+id/img5"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="3dp"
                        />

                </LinearLayout>



            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Image"
                android:background="@android:color/transparent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textColor="@android:color/darker_gray"
                android:id="@+id/btn_addpic"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Product Infromation"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:paddingLeft="15dp"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <!--product name filed-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Product Name"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/productname"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <!--end filed area-->


                    <!--product name filed-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Product Details"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/pdetals"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <!--end filed area-->


                    <!--product name filed-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Model Name"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/pmodel"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <!--end filed area-->

                    <!--product name filed-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Delivery area"
                                android:layout_marginLeft="15dp"
                                android:id="@+id/parea"/>

                        </com.google.android.material.textfield.TextInputLayout>


                    </LinearLayout>
                    <!--end filed area-->

                    <!--product name filed-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="5"
                        android:orientation="horizontal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Price"
                                android:layout_marginLeft="15dp"
                                android:inputType="number"
                                android:id="@+id/pprice"/>

                        </com.google.android.material.textfield.TextInputLayout>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="TK"
                            android:textSize="19sp"
                            />

                    </LinearLayout>
                    <!--end filed area-->

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#F6EA407E"
                        android:text="Post Product"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="10dp"
                        android:id="@+id/post"/>


                </LinearLayout>



        </LinearLayout>



    </androidx.cardview.widget.CardView>
</androidx.core.widget.NestedScrollView>





</RelativeLayout>