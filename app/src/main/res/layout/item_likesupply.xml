<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/image_spalsh"
                android:id="@+id/titletag"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"

                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="I Can Supply "
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/image_spalsh"
                    android:layout_marginLeft="15dp"

                    android:layout_marginTop="10dp"
                    android:id="@+id/titlewho"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/titletag"
                android:id="@+id/checkgrp1"
                android:layout_marginLeft="130dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="7dp"

                >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/titletag"
                    android:id="@+id/chmask"
                    android:text="Mask"/>


                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chmask"
                    android:id="@+id/chPPE"
                    android:text="PPE"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/chPPE"
                    android:id="@+id/medine"
                    android:text="Medicines"/>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/checkgrp1"
                    android:id="@+id/mequipment"
                    android:text="Medicine Equipment"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mequipment"

                    android:id="@+id/senitaizer"

                    android:text="Hand Sanitizer"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="Others"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:textColor="@android:color/black"
                    android:id="@+id/tv_otherclik"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/checkgrp1"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="0dp"
                android:id="@+id/supply_other"
                android:orientation="vertical"
                android:visibility="visible"

                >


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="-8dp"
                    android:background="@drawable/background_edittxt_dialog"
                    android:hint="write what other you can Supply"
                    android:id="@+id/edt_supply_other"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="15dp"
                    android:visibility="visible"

                    android:textSize="18sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/supply_other"
                android:text="Note: select single or multiple checkbox"
                android:layout_marginTop="5dp"
                android:id="@+id/note"
                android:textAlignment="center"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/image_spalsh"
                android:id="@+id/title_dialog"
                android:layout_marginLeft="20dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="How soon can you supply"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_below="@+id/image_spalsh"
                    android:layout_marginTop="10dp"
                    android:id="@+id/titleemdialog"
                    android:layout_marginRight="1dp"
                    android:textColor="@android:color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    />
            </LinearLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Within 2hours \n Within today \n Within 2 days"
                android:textSize="18sp"
                android:id="@+id/edt_sptime"
                android:background="@drawable/background_edittxt_dialog"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_marginTop="10dp"
                android:inputType="textMultiLine"
                android:paddingLeft="20dp"


                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_below="@+id/note"
                android:gravity="right"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                >


                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:text="Update"
                    android:textAllCaps="false"
                    android:background="@drawable/btn_bg_submit"
                    android:id="@+id/btn_update"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="8dp"
                    />

            </LinearLayout>


        </LinearLayout>



    </androidx.core.widget.NestedScrollView>
</LinearLayout>